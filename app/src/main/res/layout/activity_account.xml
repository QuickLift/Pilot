<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quickliftpilot.activities.AccountActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Transaction History"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:entries="@array/select_option"
        android:prompt="@string/select_prompt">
    </Spinner>

    <LinearLayout
        android:id="@+id/from_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/from_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/from_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/from_date_pick"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:onClick="date_from"
            android:layout_toRightOf="@id/from_date"
            android:layout_below="@+id/title"
            android:background="@color/front_color"
            android:src="@drawable/ic_action_date"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/to_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_linear"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/to_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/to_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/to_date_pick"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:onClick="date_to"
            android:background="@color/front_color"
            android:src="@drawable/ic_action_date"/>
    </LinearLayout>

    <View
        android:id="@+id/first_view"
        android:layout_below="@+id/to_linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="#000000"/>
    <Button
        android:id="@+id/load_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Load"
        android:onClick="load_btn"
        android:background="@color/back_color"
        android:layout_below="@+id/first_view"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/second_view"
        android:layout_below="@+id/load_btn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="#000000"/>
<LinearLayout
