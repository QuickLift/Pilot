<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:paddingLeft="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/earning"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#05affc"
            android:text="Earning"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/cash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="Cash"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textColor="#05affc"
                android:gravity="center"/>

            <TextView
                android:id="@+id/paytm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="Paytm"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textColor="#05affc"
                android:gravity="center"/>

            <TextView
                android:id="@+id/offer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="Offer"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textColor="#05affc"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/deduction"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#05affc"
            android:text="Deduction"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/tax"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="Tax"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textColor="#05affc"
                android:gravity="center"/>

            <TextView
                android:id="@+id/cancellation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="Cancellation"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textColor="#05affc"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/company_cess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Cess"
            android:textSize="18sp"
            android:textColor="#05affc"
            android:gravity="center"/>

        <TextView
            android:id="@+id/outstanding"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#05affc"
            android:text="OutStanding Amount"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>